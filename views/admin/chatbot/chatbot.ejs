<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Admin panel</title>
		<link
			rel="shortcut icon"
			href="../../images/home/classic-nee-tacademy-logo.png"
			type="image/x-icon"
		/>
		<link rel="stylesheet" href="../../stylesheets/admin.css" />
		<link rel="stylesheet" href="../../stylesheets/pagination.css" />

		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<div class="previewTopper">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="25"
				height="25"
				fill="#000"
				class="bi bi-x-lg closesvg"
				viewBox="0 0 16 16"
			>
				<path
					d="M1.293 1.293a1 1 0 0 1 1.414 0L8 6.586l5.293-5.293a1 1 0 1 1 1.414 1.414L9.414 8l5.293 5.293a1 1 0 0 1-1.414 1.414L8 9.414l-5.293 5.293a1 1 0 0 1-1.414-1.414L6.586 8 1.293 2.707a1 1 0 0 1 0-1.414z"
				/>
			</svg>
		</div>
		<%- include('../../layout/adminheader') %>
		<section class="mainsection">
			<div class="left"><%- include('../../layout/adminSideBar') %></div>
			<div class="right">
				<h1 class="m-5 fs-4 fw-bold">Chat Bot</h1>

				<table class="table" style="width: 70%">
					<thead>
						<tr>
							<th scope="col">Name</th>
							<th scope="col">Phonenumber</th>
							<th scope="col">Email</th>
							<th scope="col">Date</th>
							<th scope="col">Delete</th>
						</tr>
					</thead>
					<tbody class="tbody"></tbody>
				</table>
				<div id="pagination-container"></div>

				<% if (chatbot.length > 0) { %>
				<form
					action="/admin/chatbot?_method=DELETE"
					method="post"
					class="d-flex justify-content-center align-items-center flex-column chatbotform imgform"
					style="width: 100%"
				>
					<div class="buttondiv">
						<button type="button" class="btn btn-outline-danger submit mt-3">
							Empty Response
						</button>
					</div>
				</form>
				<% } %>
			</div>
		</section>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
			referrerpolicy="no-referrer"
		></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.5/pagination.min.js"
			integrity="sha512-1zzZ0ynR2KXnFskJ1C2s+7TIEewmkB2y+5o/+ahF7mwNj9n3PnzARpqalvtjSbUETwx6yuxP5AJXZCpnjEJkQw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		></script>
		<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script src="../../javascripts/admin/chatbot/chatbot.js"></script>
	</body>
</html>
