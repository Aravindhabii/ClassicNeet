<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin panel</title>
    <link rel="shortcut icon" href="../../images/home/classic-nee-tacademy-logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="../../stylesheets/admin.css" />
    <link rel="stylesheet" href="sweetalert2.min.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../../layout/adminheader') %>
    <section class="mainsection">
      <div class="left"><%- include('../../layout/adminSideBar') %></div>
      <div class="right">
        <div class="preview">
          <h1 class="mb-5 fs-4 fw-bold">Questionbank Marquee</h1>
          <form
            action="/admin/questionbank"
            method="post"
            class="d-flex justify-content-center align-items-center flex-column"
            style="width: 100%"
          >
          <div class="input-group flex-nowrap mb-3" style="width: 80%">
            <span class="input-group-text" id="addon-wrapping">Id</span>
            <input
              type="text"
              name="id"
              class="form-control marqueeid"
              aria-label="Username"
              aria-describedby="addon-wrapping"
              id="uploadlink"
              required
              readonly
            />
          </div>
            <div class="input-group flex-nowrap " style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Marquee Text</span>
              <input
                type="text"
                name="text"
                class="form-control marqueetext"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                maxlength="90"
                required
              /> 
            </div>
            <div class="d-flex justify-content-end mb-3" style="width: 80%">
                <p class="spanp d-flex">
                    Characters left &nbsp;<span class="changablespan">0</span>/90
                </p>
            </div>
            <div class="input-group flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Link</span>
              <input
                type="url"
                name="link"
                class="form-control marqueelink"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                required
              />
            </div>
            <div>
              <button
                type="button"
                class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn"
              >
                Back
              </button>
              <button type="submit" class="btn btn-outline-primary mt-5">
                submit
              </button>
            </div>
          </form>
        </div>
        <form
          action="/admin/studenttestimonials?_method=DELETE"
          method="post"
          class="imgform latestupdateform"
        >
          <h1 class="m-5 fs-4 fw-bold">Questionbank Marquee</h1>
          <table class="table" style="width: 70%">
            <thead>
              <tr>
                <th scope="col" class="d-flex justify-content-center">
                  Current Text
                </th>
                <th scope="col">Button</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody class="tbody">
              <% marquee.forEach(i => { %>
              <tr>
                <td>
                  <input
                    type="url"
                    id="linkinput"
                    value="<%= i.text %>"
                    readonly
                    style="width: 80%; border: none"
                  />
                </td>
                <td>
                    <input
                      type="url"
                      id="linkinput"
                      value="<%= i.link %>"
                      readonly
                      style="width: 80%; border: none"
                    />
                </td>
                <td>
                    <button
                        type="button"
                        class="btn btn-danger ms-5 px-3 editbtn"
                        value= '<%= i.text %>**<%= i.link %>**<%= i.id %>'
                    >
                        Edit
                    </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </form>
      </div>
    </section>
    <script src="../../javascripts/admin/home/questionbank.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
