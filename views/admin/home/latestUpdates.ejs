<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="shortcut icon" href="../../images/home/classic-nee-tacademy-logo.png" type="image/x-icon" />
		<title>Admin panel</title>
		<link rel="stylesheet" href="sweetalert2.min.css" />
		<link rel="stylesheet" href="../../stylesheets/admin.css" />
		<link rel="stylesheet" href="../../stylesheets/pagination.css" />

		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<%- include('../../layout/adminheader') %>
		<section class="mainsection">
			<div class="left" style="bottom: 0; position: fixed">
				<%- include('../../layout/adminSideBar') %>
			</div>
			<div class="right">
				<div class="preview">
					<h1 class="mb-5 fs-4 fw-bold">Latest Updates</h1>
					<form
						action="/admin/latestupdates"
						method="post"
						class="d-flex justify-content-center align-items-center flex-column"
						style="width: 100%"
					>
						<p class="err-message text-danger"></p>
						<div class="input-group flex-nowrap" style="width: 80%">
							<br />
							<span class="input-group-text" id="addon-wrapping">Add News</span>
							<input
								type="text"
								name="uploadlink"
								class="form-control inputtext news-input"
								aria-label="Username"
								aria-describedby="addon-wrapping"
								id="uploadlink"
								minlength="10"
								maxlength="100"
								required
							/>
						</div>
						<div class="d-flex justify-content-end" style="width: 80%">
							<p class="spanp d-flex">
								Characters left &nbsp;<span class="changablespan"></span
								><span>/150</span>
							</p>
						</div>
						<div class="input-group flex-nowrap" style="width: 80%">
							<span class="input-group-text" id="addon-wrapping">Add Link</span>
							<input
								type="url"
								name="link"
								class="form-control inputtext"
								aria-label="Username"
								aria-describedby="addon-wrapping"
								id="uploadlink"
							/>
						</div>
						<div>
							<button
								type="button"
								class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn"
							>
								Back
							</button>
							<button type="submit" class="btn btn-outline-primary mt-5">
								submit
							</button>
						</div>
					</form>
				</div>
				<form
					action="/admin/latestupdates?_method=DELETE"
					method="post"
					class="imgform latestupdateform"
				>
					<h1 class="m-4 fs-4 fw-bold">Latest Updates</h1>

					<table class="table" style="width: 70%">
						<thead>
							<tr>
								<th scope="col">Current Link</th>
								<th scope="col">Current Link</th>
								<th scope="col">Updates</th>
							</tr>
						</thead>
						<tbody class="tbody"></tbody>
					</table>
					<div id="pagination-container" class="mb-3"></div>
					<div class="buttondiv">
						<button type="button" class="btn btn-outline-primary addbtn px-4">
							Add
						</button>
						<button
							type="button"
							class="
								btn btn-outline-danger
								submit
								ms-5
								px-3
								submitbtn
								warningcheck
							"
						>
							Delete
						</button>
					</div>
				</form>
			</div>
		</section>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
			referrerpolicy="no-referrer"
		></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.5/pagination.min.js"
			integrity="sha512-1zzZ0ynR2KXnFskJ1C2s+7TIEewmkB2y+5o/+ahF7mwNj9n3PnzARpqalvtjSbUETwx6yuxP5AJXZCpnjEJkQw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		></script>
		<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script src="../../javascripts/admin/home/latestUpdates.js"></script>
	</body>
</html>
