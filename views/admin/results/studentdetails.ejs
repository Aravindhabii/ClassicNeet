<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin panel</title>
    <link rel="shortcut icon" href="../../images/home/classic-nee-tacademy-logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="../../stylesheets/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="previewTopper">
      <span class="closesvg" style="z-index: 10; height: 100px;width: 200px; right: 20%; top: 8%;">
				<img
				style="z-index: 10;" src="https://img.icons8.com/ios-glyphs/40/000000/macos-close.png"
				/>
				<h5 class="closeText">Close</h5>
			</span>
    </div>
    <%- include('../../layout/adminheader') %>
    <section class="mainsection">
      <div class="left"><%- include('../../layout/adminSideBar') %></div>
      <div class="right" style="height: auto">
        <form
          action="/year"
          method="post"
          class="
            position-absolute
            p-3
            d-flex
            justify-content-center
            align-items-center
            top-0
            end-0
            p-5
          "
          style="z-index: 2; width: 40%"
        > 
        <span style="display: flex; width: 300px;justify-content: space-around;align-items: center;">
          <h5 style="font-weight: 600;">Select year:</h5>
          <select
            class="form-select currentYear"
            aria-label="Default select example"
            style="width: 50%"
          >
            <% year.forEach((e,i) => { %>
            <option value="<%= e %>" ><%= e %></option>
            <% }) %>
          </select>
        </span>
          
        </form>
        <!--previewdiv  -->
        <div class="preview">
          <h1 class="mb-5 fs-4 fw-bold">Student Details</h1>
          <form
            action="/admin/results/studentdetails"
            method="post"
            class="d-flex justify-content-center align-items-center flex-column"
            style="width: 100%"
            enctype="multipart/form-data"
          >
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Name</span>
              <input
                type="text"
                name="name"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                minlength="1"
								maxlength="40"
                required
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add Image</span
              >
              <input
                type="file"
                name="studentimg"
                accept="image/*"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                required
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add collegeName</span
              >
              <input
                type="text"
                name="collegeName"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                minlength="1"
								maxlength="40"
                id="uploadlink"
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add Mark</span
              >
              <input
                type="number"
                name="mark"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                minlength="1"
								maxlength="40"
                id="uploadlink"
              />
            </div>
            <div class="input-group d-flex flex-nowrap" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Year</span>
              <input
                type="number"
                name="year"
                class="form-control year"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                min="2010"
              />
            </div>
            <div>
              <button
                type="button"
                class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn"
              >
                Back
              </button>
              <button type="submit" class="btn btn-outline-primary mt-5">
                submit
              </button>
            </div>
          </form>
        </div>
        <!-- preview2 -->
        <div class="preview2">
          <h1 class="mb-5 fs-4 fw-bold">Student Details</h1>
          <form
            action="/admin/results/studentupdate"
            method="post"
            class="d-flex justify-content-center align-items-center flex-column"
            style="width: 100%"
          >
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Id</span>
              <input
                type="text"
                name="oldname"
                class="form-control oldname"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="Student Name"
                readonly
              />
            </div>

            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Name</span>
              <input
                type="text"
                name="stdname"
                class="form-control editname"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="Student Name"
                required
              />
            </div>

            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add College</span
              >
              <input
                type="text"
                name="clgname"
                class="form-control editcollegename"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="CollegeName"
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add Mark</span
              >
              <input
                type="number"
                name="mark"
                class="form-control editmark"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="Mark"
              />
            </div>

            <div>
              <button
                type="button"
                class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn2"
              >
                Back
              </button>
              <button type="submit" class="btn btn-outline-primary mt-5">
                submit
              </button>
            </div>
          </form>
        </div>

        <form
          action="/admin/results/studentdetails?_method=DELETE"
          method="post"
          class="imgform latestupdateform"
        >
          <h1 class="m-5 fs-4 fw-bold">Student Details</h1>

          <table class="table" style="width: 70%">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">College Name</th>
                <th scope="col">Mark</th>
                <th scope="col">Update</th>
                <th scope="col">Year</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody class="tbody" data-total="0" data-current="1"></tbody>
          </table>
          <div class="buttondiv mb-2">
            <button
              type="button"
              class="btn btn-primary px-4 mx-1 prev"
              disabled
            >
              Previous
            </button>
            <button type="button" disabled class="btn btn-primary px-4 mx-1 next">
              &nbsp;&nbsp;Next&nbsp;&nbsp;
            </button>
          </div>
          <div class="buttondiv">
            <button type="button" class="btn btn-outline-primary addbtn px-4">
              Add
            </button>
            <button
              type="button"
              class="btn btn-outline-danger submit ms-5 px-3 submitbtn warningcheck"
            >
              Delete
            </button>
          </div>
        </form>
      </div>
    </section>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="../../javascripts/admin/results/studentdetails.js"></script>
  </body>
</html>
