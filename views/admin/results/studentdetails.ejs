<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin panel</title>
    <link rel="stylesheet" href="../../stylesheets/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="previewTopper">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="25"
        height="25"
        fill="#000"
        class="bi bi-x-lg closesvg"
        viewBox="0 0 16 16"
      >
        <path
          d="M1.293 1.293a1 1 0 0 1 1.414 0L8 6.586l5.293-5.293a1 1 0 1 1 1.414 1.414L9.414 8l5.293 5.293a1 1 0 0 1-1.414 1.414L8 9.414l-5.293 5.293a1 1 0 0 1-1.414-1.414L6.586 8 1.293 2.707a1 1 0 0 1 0-1.414z"
        />
      </svg>
    </div>
    <%- include('../../layout/adminheader') %>
    <section class="mainsection">
      <div class="left"><%- include('../../layout/adminSideBar') %></div>
      <div class="right" style="height: auto">
        <form
          action="/year"
          method="post"
          class="
            position-absolute
            p-3
            d-flex
            justify-content-center
            align-items-center
            top-0
            end-0
            p-5
          "
          style="z-index: 2; width: 40%"
        >
          <select
            class="form-select currentYear"
            aria-label="Default select example"
            style="width: 40%"
          >
            <% year.forEach((e,i) => { %>
            <option value="<%= e %>" ><%= e %></option>
            <% }) %>
          </select>
        </form>
        <!--previewdiv  -->
        <div class="preview">
          <h1 class="mb-5">Student Details</h1>
          <form
            action="/admin/results/studentdetails"
            method="post"
            class="d-flex justify-content-center align-items-center flex-column"
            style="width: 100%"
            enctype="multipart/form-data"
          >
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Name</span>
              <input
                type="text"
                name="name"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                required
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add Image</span
              >
              <input
                type="file"
                name="studentimg"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                required
              />
            </div>
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add collegeName</span
              >
              <input
                type="text"
                name="collegeName"
                class="form-control"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
              />
            </div>
            <div class="input-group d-flex flex-nowrap" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Year</span>
              <input
                type="number"
                name="year"
                class="form-control year"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id="uploadlink"
                min="2010"
              />
            </div>
            <div>
              <button
                type="button"
                class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn"
              >
                Back
              </button>
              <button type="submit" class="btn btn-outline-primary mt-5">
                submit
              </button>
            </div>
          </form>
        </div>
        <!-- preview2 -->
        <div class="preview2">
          <h1 class="mb-5">Student Details</h1>
          <form
            action="/admin/results/studentupdate"
            method="post"
            class="d-flex justify-content-center align-items-center flex-column"
            style="width: 100%"
          >
            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Id</span>
              <input
                type="text"
                name="oldname"
                class="form-control oldname"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="Student Name"
                readonly
              />
            </div>

            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping">Add Name</span>
              <input
                type="text"
                name="stdname"
                class="form-control editname"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="Student Name"
                required
              />
            </div>

            <div class="input-group d-flex flex-nowrap mb-3" style="width: 80%">
              <span class="input-group-text" id="addon-wrapping"
                >Add College</span
              >
              <input
                type="text"
                name="clgname"
                class="form-control editcollegename"
                aria-label="Username"
                aria-describedby="addon-wrapping"
                id=" uploadlink"
                placeholder="CollegeName"
              />
            </div>

            <div>
              <button
                type="button"
                class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn2"
              >
                Back
              </button>
              <button type="submit" class="btn btn-outline-primary mt-5">
                submit
              </button>
            </div>
          </form>
        </div>

        <form
          action="/admin/results/studentdetails?_method=DELETE"
          method="post"
          class="imgform latestupdateform"
        >
          <h1 class="m-5">Student Details</h1>

          <table class="table" style="width: 70%">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">College Name</th>
                <th scope="col">Update</th>
                <th scope="col">Year</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody class="tbody" data-total="0" data-current="1"></tbody>
          </table>
          <div class="buttondiv mb-2">
            <button
              type="button"
              class="btn btn-primary px-4 mx-1 prev"
              disabled
            >
              Previous
            </button>
            <button type="button" disabled class="btn btn-primary px-4 mx-1 next">
              &nbsp;&nbsp;Next&nbsp;&nbsp;
            </button>
          </div>
          <div class="buttondiv">
            <button type="button" class="btn btn-outline-primary addbtn px-4">
              Add
            </button>
            <button
              type="button"
              class="btn btn-outline-danger submit ms-5 px-3 submitbtn"
              disabled
            >
              Delete
            </button>
          </div>
        </form>
      </div>
    </section>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="../../javascripts/admin/results/studentdetails.js"></script>
  </body>
</html>
