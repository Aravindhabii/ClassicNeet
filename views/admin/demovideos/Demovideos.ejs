<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Admin panel</title>
		<link rel="shortcut icon" href="../../images/home/classic-nee-tacademy-logo.png" type="image/x-icon" />
		<link rel="stylesheet" href="sweetalert2.min.css" />
		<link rel="stylesheet" href="../../stylesheets/admin.css" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		
		<%- include('../../layout/adminheader') %>
		<section class="mainsection">
			<div class="left"><%- include('../../layout/adminSideBar') %></div>
			<div class="right">
				<div class="preview">
					<h1 class="mb-5 fs-4 fw-bold">Demo Videos</h1>
					<form
						action="/admin/demovideos"
						method="post"
						class="d-flex justify-content-center align-items-center flex-column"
						style="width: 100%"
					>
						<div class="input-group flex-nowrap" style="width: 80%">
							<span class="input-group-text" id="addon-wrapping">Add Link</span>
							<input
								type="url"
								name="uploadlink"
								class="form-control"
								aria-label="Username"
								aria-describedby="addon-wrapping"
								id="uploadlink"
								required
							/>
						</div>
						<div>
							<button
								type="button"
								class="btn btn-outline-secondary px-3 mt-5 me-5 backbtn"
							>
								Back
							</button>
							<button type="submit" class="btn btn-outline-primary mt-5">
								submit
							</button>
						</div>
					</form>
				</div>
				<form
					action="/admin/demovideos?_method=DELETE"
					method="post"
					class="imgform demoVideosForm demo1"
				>
					<h1 class="m-5 fs-4 fw-bold">Demo Videos</h1>

					<table class="table" style="width: 70%">
						<thead>
							<tr>
								<th scope="col">Current Link</th>
								<th scope="col">Update</th>
							</tr>
						</thead>
						<tbody>
							<% link.forEach(i => { %>
							<tr>
								<td>
									<input
										type="url"
										id="linkinput"
										value="<%= i %>"
										readonly
										style="width: 80%; border: none"
									/>
								</td>
								<td>
									<input
										type="checkbox"
										id="checkbox"
										class="updatesCheckbox"
										name="checkbox"
										value="<%= i %>"
										style="height: 20px; width: 20px"
									/>
								</td>
							</tr>
							<% }) %>
						</tbody>
					</table>
					<div class="buttondiv" id="buttonid">
						<% if (link.length<9) { %>
						<button type="button" class="btn btn-outline-primary addbtn px-4">
							Add
						</button>
						<% }else{ %>
						<p
							class="
								text-danger
								d-flex
								justify-content-center
								align-items-center
							"
						>
							You have reached your limit
						</p>
						<% } %>
						<button
							type="button"
							class="
								btn btn-outline-danger
								submit
								ms-5
								px-3
								submitbtn
								warningcheck
							"
						>
							Delete
						</button>
					</div>
				</form>
			</div>
		</section>
		<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script src="../../javascripts/admin/Demovideos/Demovideos.js"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
